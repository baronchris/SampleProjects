@model CarDealership2.Models.CarAddEdditVM

@{
    ViewBag.Title = "AddCar";
}

<h2>Add a Car</h2>
<div class="container">
    @using (Html.BeginForm("AddCar", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

            <div class="col-xs-5 form-group">
                @Html.LabelFor(m => m.AddCar.MakeID)
                @Html.DropDownListFor(m => m.AddCar.MakeID, Model.MakeChoices, "-Choose Make-", new { @class = "form-control" })
                <span class="text-danger"> @Html.ValidationMessageFor(m => m.AddCar.MakeID)</span>
            </div>
            <div class="col-xs-5 form-group">
                @Html.LabelFor(m => m.AddCar.ModelID)
                @Html.DropDownListFor(m => m.AddCar.ModelID, Model.ModelChoices, "-Choose Model-", new { @class = "form-control" })
                <span class="text-danger"> @Html.ValidationMessageFor(m => m.AddCar.ModelID)</span>
            </div>

            <div class="col-xs-5 form-group">
                @Html.LabelFor(m => m.AddCar.IsNew)
                @Html.DropDownListFor(m => m.AddCar.IsNew, Model.Type, "Type", new { @class = "form-control" })
                <span class="text-danger"> @Html.ValidationMessageFor(m => m.AddCar.IsNew)</span>

            </div>
            <div class="col-xs-5 form-group">
                @Html.LabelFor(m => m.AddCar.StyleID)
                @Html.DropDownListFor(m => m.AddCar.StyleID, Model.BodyStyleChoices, "-Select Body Style-", new { @class = "form-control" })
                <span class="text-danger"> @Html.ValidationMessageFor(m => m.AddCar.StyleID)</span>
            </div>
            <div class="col-xs-5 form-group">
                @Html.LabelFor(m => m.AddCar.ModelYear)
                @Html.TextBoxFor(m => m.AddCar.ModelYear, new { @class = "form-control", placeholder = "YYYY", type = "number", min = "1900" })
                <span class="text-danger"> @Html.ValidationMessageFor(m => m.AddCar.ModelYear)</span>

            </div>
            <div class="col-xs-5 form-group">
                @Html.LabelFor(m => m.AddCar.TransmissionID)
                @Html.DropDownListFor(m => m.AddCar.TransmissionID, Model.Transmissions, "-Transmission-", new { @class = "form-control" })
                <span class="text-danger"> @Html.ValidationMessageFor(m => m.AddCar.TransmissionID)</span>
            </div>

            <div class="col-xs-5 form-group">
                @Html.LabelFor(m => m.AddCar.Color)
                @Html.DropDownListFor(m => m.AddCar.Color, Model.ColorChoices, "-Color-", new { @class = "form-control" })
                <span class="text-danger"> @Html.ValidationMessageFor(m => m.AddCar.Color)</span>

            </div>
            <div class="col-xs-5 form-group">
                @Html.LabelFor(m => m.AddCar.Interior)
                @Html.DropDownListFor(m => m.AddCar.Interior, Model.InteriorChoices, "-Color-", new { @class = "form-control" })
                <span class="text-danger"> @Html.ValidationMessageFor(m => m.AddCar.Interior)</span>

            </div>

            <div class="col-xs-5 form-group">
                @Html.LabelFor(m => m.AddCar.Mileage)
                @Html.TextBoxFor(m => m.AddCar.Mileage, new { @class = "form-control", type = "number", min = "0" })
                <span class="text-danger"> @Html.ValidationMessageFor(m => m.AddCar.Mileage)</span>

            </div>
            <div class="col-xs-5 form-group">
                @Html.LabelFor(m => m.AddCar.VIN)
                @Html.TextBoxFor(m => m.AddCar.VIN, new { @class = "form-control", type = "text" })
                <span class="text-danger"> @Html.ValidationMessageFor(m => m.AddCar.VIN)</span>
            </div>
            <div class="col-xs-5 form-group">
                @Html.LabelFor(m => m.AddCar.MSRP)
                @Html.TextBoxFor(m => m.AddCar.MSRP, new { @class = "form-control", type = "number", min = "0", step = "0.01" })
                <span class="text-danger"> @Html.ValidationMessageFor(m => m.AddCar.MSRP)</span>
            </div>
            <div class="col-xs-5 form-group">
                @Html.LabelFor(m => m.AddCar.Saleprice)
                @Html.TextBoxFor(m => m.AddCar.Saleprice, new { @class = "form-control", type = "number", min = "0", step = "0.01" })
               <span class="text-danger"> @Html.ValidationMessageFor(m => m.AddCar.Saleprice)</span>
            </div>
            <div class="col-xs-10 form-groug">
                @Html.LabelFor(m => m.AddCar.CarDescription)
                @Html.TextAreaFor(m => m.AddCar.CarDescription, new { @class = "form-control", style = "width:70%" })
            </div>
            <div class="form-group col-xs-4">
                @Html.LabelFor(m => m.AddCar.IsFeatured )
                @Html.CheckBoxFor(m => m.AddCar.IsFeatured, new { @class = "form-control" })
            </div>
            <div class="form-group col-xs-9">
                <div class="col-xs-8">
                    @Html.LabelFor(m => m.UploadedFile)
                    @Html.TextBoxFor(m => m.UploadedFile, new { type = "file", @class = "form-control", @accept = "image/x-png, image/gif, image/jpeg" })
                    <span class="text-danger"> @Html.ValidationMessageFor(m => m.UploadedFile)</span>

                </div>
            </div>
            <div class="form-group col-xs-7">
                <button type="submit" class="btn btn success">Save</button>
            </div>
      

    }

</div>

